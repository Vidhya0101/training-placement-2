class Solution {
    public int minEatingSpeed(int[] piles, int h) {
        int l = 1, r = 0;
        for (int p : piles) r = Math.max(r, p);
        while (l < r) {
            int mid = (l + r) / 2;
            int hrs = 0;
            for (int p : piles)
                hrs += Math.ceil((double)p / mid);
            if (hrs > h) l = mid + 1;
            else r = mid;
        }
        return l;
    }
}
