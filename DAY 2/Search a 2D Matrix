class Solution {
    public boolean searchMatrix(int[][] m, int t) {
        int r = m.length, c = m[0].length;
        int l = 0, h = r * c - 1;
        while (l <= h) {
            int mid = (l + h) / 2;
            if (m[mid / c][mid % c] == t) return true;
            if (m[mid / c][mid % c] < t) l = mid + 1;
            else h = mid - 1;
        }
        return false;
    }
}
