def trap(height):
    l, r = 0, len(height) - 1
    left = right = 0
    res = 0
    while l < r:
        if height[l] < height[r]:
            left = max(left, height[l])
            res += left - height[l]
            l += 1
        else:
            right = max(right, height[r])
            res += right - height[r]
            r -= 1
    return res
