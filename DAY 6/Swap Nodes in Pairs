class Solution {
    public ListNode swapPairs(ListNode head) {
        ListNode dummy = new ListNode(0);
        dummy.next = head;
        ListNode curr = dummy;
        while (curr.next != null && curr.next.next != null) {
            ListNode a = curr.next;
            ListNode b = curr.next.next;
            a.next = b.next;
            b.next = a;
            curr.next = b;
            curr = a;
        }
        return dummy.next;
    }
}
