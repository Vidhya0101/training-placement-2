class Solution {
    public ListNode rotateRight(ListNode head, int k) {
        if (head == null) return null;
        ListNode curr = head;
        int len = 1;
        while (curr.next != null) {
            curr = curr.next;
            len++;
        }
        curr.next = head;
        k %= len;
        for (int i = 0; i < len - k; i++) curr = curr.next;
        ListNode newHead = curr.next;
        curr.next = null;
        return newHead;
    }
}
