class Solution {
    public ListNode[] splitListToParts(ListNode head, int k) {
        ListNode[] res = new ListNode[k];
        int len = 0;
        for (ListNode c = head; c != null; c = c.next) len++;
        int size = len / k, extra = len % k;
        ListNode curr = head;
        for (int i = 0; i < k; i++) {
            res[i] = curr;
            int partSize = size + (extra-- > 0 ? 1 : 0);
            for (int j = 1; j < partSize; j++) curr = curr.next;
            if (curr != null) {
                ListNode next = curr.next;
                curr.next = null;
                curr = next;
            }
        }
        return res;
    }
}
